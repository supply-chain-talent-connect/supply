{
  "name": "supply-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:3001": "vite --host 0.0.0.0 --port 3001",
    "build": "tsc -b && vite build",
    "lint": "eslint src --ext .ts,.tsx --ignore-pattern 'src/generated/**'",
    "lint:fix": "eslint src --ext .ts,.tsx --fix --ignore-pattern 'src/generated/**'",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "directus:schema:lowercase": "node scripts/directus-lowercase-schema.mjs",
    "docker:build": "docker build -t supply-app .",
    "docker:run": "docker run -p 3000:80 supply-app",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:build": "docker-compose build",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@directus/sdk": "^12.0.0",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "dotted-map": "^2.2.3",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.473.0",
    "motion": "^12.23.12",
    "next-themes": "^0.4.6",
    "prisma": "^6.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "eslint": "^9.33.0",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.3"
  }
}
